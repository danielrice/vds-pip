<h1>New version</h1>

<%= form_for([@document, @version], :html => {:multipart => true}) do |f| %>
  <% if @version.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@version.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
      <% @version.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :file, "Upload a file:" %> <%= f.file_field :file %>
  </div>
  - OR -
  <div class="field">
    <%= f.label :external_url, "Link to a web address:" %> <%= f.text_field :external_url, :type => 'url' %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
